# https://github.com/diffplug/spotless/tree/main/plugin-gradle#kotlin

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 140

[{*.yml, *.yaml}]
indent_size = 2

[*.bat]
end_of_line = crlf
